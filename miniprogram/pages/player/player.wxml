<view class="player-container" style="background:url({{picUrl}}) center/cover no-repeat"></view>
<view class="player-mask"></view>

<view class="player-info">
  <view class="player-disc {{isPlaying? 'play':''}}" bindtap="onToggleLyric">
    <image 
    class="player-img rotation {{isPlaying? '':'rotation-paused'}}" 
    src="{{picUrl}}" 
    />
  </view>

  <v-lyric 
    isLyricShow="{{!isLyricShow}}" 
    bind:tap="onToggleLyric"
    lyric="{{lyric}}"
  />

  <v-progressBar 
    class="progress-bar"
    bind:musicEnd="onNext"
  />


  <view class="control">
    <text class="iconfont iconshangyishou" bind:tap="onPrev"></text>
    <text class="iconfont {{isPlaying? 'iconzanting':'iconbofang'}}" bind:tap="togglePlaying"></text>
    <text class="iconfont iconxiayishou" bind:tap="onNext"></text>
  </view>
</view>