<view class="container">
  <text class="time">{{currentTime}}</text>
  <view class="control">
    <movable-area class="movable-area">
      <movable-view
        class="movable-view"
        direction="horizontal"
      ></movable-view>
    </movable-area>
    <progress 
      percent="50%" 
      stroke-width="4"
      backgroundColor="#969696"
      activeColor="#fff"
    ></progress>
  </view>
  <text class="time">{{durationTime}}</text>
</view>
