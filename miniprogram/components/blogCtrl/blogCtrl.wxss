.container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  height: 100%;
}

.ctrl-item {
  height: 60rpx;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: rgba(40, 47, 60, 0.5);
}

.icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.comment-content {
  width: 560rpx;
  text-align: left;
  padding: 20rpx;
  font-size: 32rpx;
}

.send {
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}